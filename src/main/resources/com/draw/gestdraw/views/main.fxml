<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.draw.gestdraw.MainViewController">

    <VBox alignment="CENTER">
        <VBox alignment="CENTER">
            <Label>Duration (seconds)</Label>
            <TextField text="Duration" fx:id="durationField" alignment="CENTER" maxWidth="100"/>
        </VBox>

        <Button text="Select folder" onAction="#onSelectFolderClicked"/>
        <Button text="Start" onAction="#onStartClicked"/>
    </VBox>
</VBox>
